{
  "appliesTo": [
    {
      "when": {
        "kind": "and",
        "operands": [
          {
            "kind": "HasProjectCapability",
            "capability": "DotNetCoreWeb"
          },
          {
            "kind": "not",
            "operand": {
              "kind": "HasTargetFramework",
              "tfmPrefixOrFull": ".NetStandard"
            }
          }
        ]
      },
      "config": "storage.azure.coreweb"
    },
    {
      "when": {
        "kind": "HasProjectCapability",
        "capability": "DotNetCoreWorker"
      },
      "config": "storage.azure.worker"
    },
    {
      "when": {
        "kind": "or",
        "operands": [
          {
            "kind": "HasProjectCapability",
            "capability": "AzureFunctions"
          },
          {
            "kind": "and",
            "operands": [
              {
                "kind": "HasProjectItem",
                "projectItem": "local.settings.json"
              },
              {
                "kind": "HasProjectItem",
                "projectItem": "host.json"
              }
            ]
          }
        ]
      },
      "config": "storage.azure.function"
    },
    {
      "when": {
        "kind": "not",
        "operand": {
          "kind": "and",
          "operands": [
            {
              "kind": "HasProjectCapability",
              "capability": "DotNetCoreWeb"
            },
            {
              "kind": "not",
              "operand": {
                "kind": "HasTargetFramework",
                "tfmPrefixOrFull": ".NetStandard"
              }
            }
          ]
        }
      },
      "config": "storage.azure"
    }
  ]
}