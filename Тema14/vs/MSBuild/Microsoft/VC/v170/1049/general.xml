<Rule Name="ConfigurationGeneral" DisplayName="Общие" PageTemplate="generic" Description="Общие" xmlns="http://schemas.microsoft.com/build/2009/properties">
  <Rule.Categories>
    <Category Name="General" DisplayName="Общие свойства" Description="Общие свойства"/>
  </Rule.Categories>
  <Rule.DataSource>
    <DataSource Persistence="ProjectFile" Label="Configuration"/>
  </Rule.DataSource>
  
   <StringProperty Name="OutDir" DisplayName="Выходной каталог" Description="Путь, куда будет помещена скомпилированная программа. Может включать переменные среды." Category="General" Subtype="folder" F1Keyword="VC.Project.VCConfiguration.OutputDirectory">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label=""/>
    </StringProperty.DataSource>
  </StringProperty>
  <StringProperty Name="IntDir" DisplayName="Промежуточный каталог" Description="Относительный путь к расположению, где создаются промежуточные файлы сборки (например, OBJ-файлы). Может содержать переменные среды." Category="General" Subtype="folder" F1Keyword="VC.Project.VCConfiguration.IntermediateDirectory">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label=""/>
    </StringProperty.DataSource>
  </StringProperty>
  <StringProperty Name="TargetName" DisplayName="Имя целевого объекта" Description="Задает имя файла для программы, создаваемой проектом." F1Keyword="VC.Project.VCConfiguration.TargetName" Category="General">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label=""/>
    </StringProperty.DataSource>
  </StringProperty>

  <EnumProperty Name="ConfigurationType" DisplayName="Тип конфигурации" Description="Указывает тип создаваемой программы (например, исполняемый файл, статическая библиотека, динамическая библиотека и т. д.)." Category="General" F1Keyword="VC.Project.VCConfiguration.ConfigurationType">
    <EnumValue Name="Makefile" DisplayName="Файл makefile" Description="Файл makefile"/>
    <EnumValue Name="Application" DisplayName="Приложение (.exe)" Description="Приложение (.exe)"/>
    <EnumValue Name="DynamicLibrary" DisplayName="Динамическая библиотека (.dll)" Description="Динамическая библиотека (.dll)"/>
    <EnumValue Name="StaticLibrary" DisplayName="Статическая библиотека (.lib)" Description="Статическая библиотека (.lib)"/>
    <EnumValue Name="Utility" DisplayName="Служебная программа" Description="Служебная программа"/>
  </EnumProperty>

  <DynamicEnumProperty Name="WindowsTargetPlatformVersion" DisplayName="Версия пакета SDK для Windows" Description="Указывает, какую версию пакета SDK Windows нужно использовать для этого проекта (требуется для проектов, ориентированных на Windows). Выберите 10.0, чтобы использовать последнюю установленную версию пакета SDK Windows 10." Category="General" EnumProvider="PlatformVersionsEx" F1Keyword="VC.Project.VCConfiguration.TargetPlatformVersion">
    <DynamicEnumProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label="Globals" SourceOfDefaultValue="AfterContext" HasConfigurationCondition="False"/>
    </DynamicEnumProperty.DataSource>
  </DynamicEnumProperty>

  <DynamicEnumProperty Name="PlatformToolset" DisplayName="Набор инструментов платформы" EnumProvider="Toolsets" Description="Указывает, какие средства сборки используются для создания этой программы." Category="General" F1Keyword="VC.Project.VCConfiguration.PlatformToolset"/>
  
  <EnumProperty Name="LanguageStandard" DisplayName="Стандарт языка C++" Description="Определяет стандарт языка C++, который будет соблюдать компилятор. Рекомендуется по возможности использовать последнюю версию. (/std:c++14, /std:c++17, /std:c++20, /std:c++latest)" Category="General" F1Keyword="VC.Project.VCCLCompilerTool.CppLanguageStandard">
    <EnumProperty.DataSource>
      <DataSource Persistence="ProjectFile" ItemType="ClCompile" Label="" HasConfigurationCondition="true"/>
    </EnumProperty.DataSource>
    <EnumValue Name="Default" DisplayName="По умолчанию (стандарт ISO C++ 14)"/>
    <EnumValue Name="stdcpp14" Switch="/std:c++14" DisplayName="Стандарт ISO C++14"/>
    <EnumValue Name="stdcpp17" Switch="/std:c++17" DisplayName="Стандарт ISO C++17"/>
    <EnumValue Name="stdcpp20" Switch="/std:c++20" DisplayName="Стандарт ISO C++ 20"/>
    <EnumValue Name="stdcpplatest" Switch="/std:c++latest" DisplayName="Предварительная версия — функции из последнего рабочего черновика C++"/>
  </EnumProperty>

  <EnumProperty Name="LanguageStandard_C" DisplayName="Стандарт языка C" Description="Определяет стандарт языка C, который будет соблюдать компилятор. Рекомендуется по возможности использовать последнюю версию. (/std:c11, /std:c17)" Category="General" F1Keyword="VC.Project.VCCLCompilerTool.CppLanguageStandard">
    <EnumProperty.DataSource>
      <DataSource Persistence="ProjectFile" ItemType="ClCompile" Label="" HasConfigurationCondition="true"/>
    </EnumProperty.DataSource>
    <EnumValue Name="Default" DisplayName="По умолчанию (устаревший MSVC)"/>
    <EnumValue Name="stdc11" Switch="/std:c11" DisplayName="Стандарт ISO C11"/>
    <EnumValue Name="stdc17" Switch="/std:c17" DisplayName="Стандарт ISO C17 (2018)"/>
  </EnumProperty>

  <!-- invisible properties to keep backward compatibility if some code is using the rule to get/set properties -->
  <StringProperty Name="SDKDisplayName" DisplayName="Целевая платформа" Description="Текущая целевая платформа проекта." ReadOnly="true" Visible="false" Category="General" F1Keyword="VC.Project.VCConfiguration.AppSupport">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label=""/>
    </StringProperty.DataSource>
  </StringProperty>
  <StringProperty Name="TargetExt" DisplayName="Конечное расширение" Description="Задает расширение файла, создаваемого проектом. (Например: .exe или .dll)" F1Keyword="VC.Project.VCConfiguration.TargetExt" Visible="false" Category="General">
                  <StringProperty.DataSource>
                     <DataSource Persistence="ProjectFile" Label=""/>
                  </StringProperty.DataSource>
  </StringProperty>
  <StringListProperty Name="ExtensionsToDeleteOnClean" DisplayName="Расширения для удаления при очистке" Description="разделенная точками с запятой спецификация из подстановочных знаков, определяющая какие файлы в промежуточном каталоге нужно удалять при очистке или перестроении." Category="General" Separator=";" Visible="false" F1Keyword="VC.Project.VCConfiguration.DeleteExtensionsOnClean">
                      <StringListProperty.DataSource>
                            <DataSource Persistence="ProjectFile" Label=""/>
                      </StringListProperty.DataSource>
  </StringListProperty>
  <StringProperty Name="BuildLogFile" DisplayName="Файл журнала сборки" Description="Определяет файл журнала сборки, в который будет вестись запись, если ведение журнала включено." F1Keyword="VC.Project.VCConfiguration.BuildLogFile" Visible="false" Category="General" Default="$(ProjectDir)\$(MSBuildProjectName).log" Subtype="file">
                  <StringProperty.DataSource>
                     <DataSource Persistence="ProjectFile" ItemType="BuildLog" PersistedName="Path"/>
                  </StringProperty.DataSource>
  </StringProperty>
   
  <EnumProperty Name="UseOfMfc" DisplayName="Использование MFC" Description="Определяет, как в конфигурации используется MFC." Visible="false" Category="Geleral" F1Keyword="VC.Project.VCConfiguration.useOfMfc">
    <EnumValue Name="false" DisplayName="Использовать стандартные библиотеки Windows" Description="Использовать стандартные библиотеки Windows"/>
    <EnumValue Name="Static" DisplayName="Использовать MFC в статической библиотеке" Description="Использовать MFC в статической библиотеке"/>
    <EnumValue Name="Dynamic" DisplayName="Использовать MFC в общей DLL" Description="Использовать MFC в общей DLL"/>
  </EnumProperty>
  <EnumProperty Name="UseOfAtl" DisplayName="Использование ATL" Description="Определяет, как в конфигурации используется ATL." Category="General" Visible="false" F1Keyword="VC.Project.VCConfiguration.useOfATL">
    <EnumValue Name="false" DisplayName="Без использования ATL" Description="Без использования ATL"/>
    <EnumValue Name="Static" DisplayName="Статическая компоновка с ATL" Description="Статическая компоновка с ATL"/>
    <EnumValue Name="Dynamic" DisplayName="Динамическая компоновка с ATL" Description="Динамическая компоновка с ATL"/>
  </EnumProperty>
  <EnumProperty Name="CharacterSet" DisplayName="Набор символов" Description="Указывает, какой набор знаков следует использовать компилятору; актуально при локализации." Category="General" Visible="false" F1Keyword="VC.Project.VCConfiguration.CharacterSet">
    <EnumValue Name="NotSet" DisplayName="Не задано" Description="Не задано"/>
    <EnumValue Name="Unicode" DisplayName="Использовать набор символов Юникода" Description="Использовать набор символов Юникода"/>
    <EnumValue Name="MultiByte" DisplayName="Использовать многобайтовую кодировку" Description="Использовать многобайтовую кодировку"/>
  </EnumProperty>
  <EnumProperty Name="CLRSupport" DisplayName="Поддержка общеязыковой среды выполнения (CLR)" Description="Определяет, поддерживает ли эта конфигурация CLR. Это несовместимо с некоторыми другими настройками, например, проверками времени выполнения. Полный список конфликтов см. в справке семейства /clr параметров компилятора C++." Category="General" Visible="false" F1Keyword="VC.Project.VCConfiguration.ManagedExtensions">
    <EnumValue Name="false" DisplayName="Без поддержки CLR-среды" Description="Без поддержки CLR-среды"/>
    <EnumValue Name="true" DisplayName="Поддержка CLR-среды (/clr)" Description="Поддержка CLR-среды (/clr)"/>
    <EnumValue Name="Pure" DisplayName="CLR-поддержка чистого MSIL (/clr:pure)" Description="CLR-поддержка чистого MSIL (/clr:pure)"/>
    <EnumValue Name="Safe" DisplayName="CLR-поддержка безопасного MSIL (/clr:safe)" Description="CLR-поддержка безопасного MSIL (/clr:safe)"/>
  </EnumProperty>
  <StringProperty Name="TargetFrameworkVersion" DisplayName="Целевая версия платформы .NET Framework" Description="Целевая версия .NET Framework в проекте. Она применяется, только если задано значение &quot;Поддержка общеязыковой среды выполнения&quot;." Category="General" Visible="false" F1Keyword="VC.Project.TargetFrameworkVersion">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label="Globals" HasConfigurationCondition="False"/>
    </StringProperty.DataSource>
  </StringProperty>
  <StringProperty Name="TargetFramework" Visible="false">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label="Globals" HasConfigurationCondition="False"/>
    </StringProperty.DataSource>
  </StringProperty>
  <EnumProperty Name="WholeProgramOptimization" DisplayName="Оптимизация всей программы" Description="Указывает, что программа будет оптимизирована через границы obj-файлов; работает наиболее эффективно при включенных оптимизациях C/C++." Category="General" Visible="false" F1Keyword="VC.Project.VCConfiguration.WholeProgramOptimization">
    <EnumValue Name="false" DisplayName="Без оптимизации всей программы" Description="Без оптимизации всей программы"/>
    <EnumValue Name="true" DisplayName="Использовать создание кода во время компоновки" Description="Использовать создание кода во время компоновки"/>
    <EnumValue Name="PGInstrument" DisplayName="Управляемая профилем оптимизация - инструмент" Description="Управляемая профилем оптимизация - инструмент"/>
    <EnumValue Name="PGOptimize" DisplayName="Ведомая профилем оптимизация - оптимизация" Description="Ведомая профилем оптимизация - оптимизация"/>
    <EnumValue Name="PGUpdate" DisplayName="Ведомая профилем оптимизация - обновление" Description="Ведомая профилем оптимизация - обновление"/>
  </EnumProperty>
  <BoolProperty Name="WindowsAppContainer" DisplayName="Поддержка приложений для Магазина Windows" Description="Включить поддержку приложений для Магазина Windows в этом проекте." Category="General" Visible="false" F1Keyword="VC.Project.VCConfiguration.AppSupport"/>
  <BoolProperty Name="UseDebugLibraries" DisplayName="Использовать отладочные библиотеки" Description="Задает использование отладочных библиотек и переключателей в данной конфигурации" Category="General" Visible="false">
  </BoolProperty>
  <BoolProperty Name="EnableManagedIncrementalBuild" DisplayName="Разрешить управляемую добавочную сборку" Description="Разрешает сценарии управляемой добавочной сборки с использованием metagen." Category="General" Visible="false" F1Keyword="VC.Project.VCConfiguration.EnableManagedIncrementalBuild">
    <BoolProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label=""/>
    </BoolProperty.DataSource>
  </BoolProperty>
  <StringProperty Name="_ProjectFileVersion" DisplayName="Версия файла проекта" Description="Задает версию инструмента преобразования, используемого для создания этого файла проекта." Category="General" Visible="false">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile"/>
    </StringProperty.DataSource>
  </StringProperty>
  <StringProperty Name="ProjectGuid" Visible="False">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label="Globals" HasConfigurationCondition="False"/>
    </StringProperty.DataSource>
  </StringProperty>
  <DynamicEnumProperty Name="TargetFrameworkMoniker" DisplayName="Моникер целевой платформы" EnumProvider="TargetFrameworkMoniker" Visible="false"/>
  <StringProperty Name="TargetPath" Visible="False"/>
  <StringProperty Name="MSBuildProjectDirectory" Visible="false"/>
  <StringProperty Name="PackageAction" Visible="false" Description="Целевой объект MSBuild, используемый при упаковке проекта."/>
  <StringProperty Name="DefaultContentType" Visible="false" Description="Имя типа содержимого по умолчанию, используемое при добавлении файлов."/>
  <StringProperty Name="VCInstallDir" Visible="false"/>
  <StringProperty Name="VCIDEInstallDir" Visible="false"/>
  <StringProperty Name="VCToolsInstallDir" Visible="false"/>
  <StringProperty Name="VSInstallDir" Visible="false"/>
  <StringProperty Name="Platform" Visible="false"/>
  <StringProperty Name="Configuration" Visible="false"/>
  <StringProperty Name="DebuggerSymbolsPath" Visible="false"/>
  <StringProperty Name="AssemblySearchPaths" Visible="false"/>
  <StringProperty Name="DefaultPlatformToolset" Visible="false"/>
  <BoolProperty Name="EnableDesignTimeBuild" Visible="false"/>
  <BoolProperty Name="AppContainerApplication" Visible="false"/>
  <EnumProperty Name="TargetRuntime" Visible="false">
    <EnumValue Name="Managed"/>
    <EnumValue Name="Native"/>
    <EnumValue Name="AppHost" DisplayName="Приложение Windows"/>
  </EnumProperty>
  <StringProperty Name="AddItemTemplateGuid" Visible="false"/>
  <BoolProperty Name="ContainsStartupTask" Visible="false"/>
  <StringProperty Name="ProjectSubType" Visible="False">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label="Globals" HasConfigurationCondition="False"/>
    </StringProperty.DataSource>
  </StringProperty>
</Rule>
