<Rule Name="AppHostLocalDebugger" DisplayName="Локальный отладчик" PageTemplate="debugger" Order="100" Description="Параметры локального отладчика" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns="http://schemas.microsoft.com/build/2009/properties">

  <Rule.Metadata>
    <sys:Guid x:Key="DebugTargetTypeCommandGuid">FEEA6E9D-77D8-423F-9EDE-3970CBB76125</sys:Guid>
    <sys:UInt32 x:Key="DebugTargetTypeCommandId">0x200</sys:UInt32>
  </Rule.Metadata>
  <Rule.DataSource>
    <DataSource Persistence="UserFile"/>
  </Rule.DataSource>
  <Rule.Categories>
    <Category Name="StartOptions" DisplayName="Параметры запуска" Description="Параметры запуска"/>
  </Rule.Categories>
  <BoolProperty Name="DebuggerLaunchApplication" DisplayName="Запустить приложение" Category="StartOptions" Description="Указывает, должно ли приложение запускаться немедленного или после ожидания отладки."/>
  <EnumProperty Name="DebuggerType" DisplayName="Тип отладчика" Category="StartOptions" Description="Указывает, какой отладчик нужно включить. Если выбран смешанный режим, будут вызываться отладчики как для управляемого, так и для машинного кода.">
    <EnumValue Name="NativeOnly" DisplayName="Только машинный код" Description="Только машинный код"/>
    <EnumValue Name="ManagedOnly" DisplayName="Только управляемый код" Description="Только управляемый код"/>
    <EnumValue Name="GPUOnly" DisplayName="Только GPU (C++ AMP)" Description="Только GPU (C++ AMP)"/>
    <EnumValue Name="Script" DisplayName="Только скрипт" Description="Только скрипт"/>
    <EnumValue Name="Mixed" DisplayName="Смешанный (управляемый и машинный)" Description="Смешанный (управляемый и машинный)"/>
  </EnumProperty>
  <DynamicEnumProperty Name="GPUDebuggerTargetType" DisplayName="Тип акселератора отладки" EnumProvider="GPUTargets" Description="Тип акселератора отладки для отладки кода GPU.  (Доступно, только когда  отладчик GPU активен.)"/>
  <EnumProperty Name="GPURefDebuggerBreakOnAllThreads" DisplayName="Стандартное поведение точек останова для GPU" Description="Задает частоту остановок отладчика GPU." F1Keyword="VC.Project.IVCGPURefDebugPageObject.BreakpointBehavior">
    <EnumValue Name="GPURefBreakOncePerWarp" DisplayName="Остановка один раз для порции" Description="Остановка один раз для порции"/>
    <EnumValue Name="GPURefBreakForCPUThread" DisplayName="Остановка для каждого потока (как ЦП)" Description="Остановка для каждого потока (как ЦП)"/>
  </EnumProperty>
</Rule>
