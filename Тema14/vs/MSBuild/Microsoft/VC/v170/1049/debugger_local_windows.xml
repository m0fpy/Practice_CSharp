<Rule Name="WindowsLocalDebugger" DisplayName="Локальный отладчик Windows" PageTemplate="debugger" Description="Параметры локального отладчика Windows" xmlns="http://schemas.microsoft.com/build/2009/properties">
  <Rule.DataSource>
    <DataSource Persistence="UserFile" />
  </Rule.DataSource>
  <StringProperty Name="LocalDebuggerCommand" DisplayName="Команда" Description="Команда отладки для выполнения." F1Keyword="VC.Project.IVCLocalDebugPageObject.Command">
    <StringProperty.ValueEditors>
      <ValueEditor EditorType="DefaultFindFullPathPropertyEditor" DisplayName="&lt;regsvr32.exe&gt;">
        <ValueEditor.Metadata>
          <NameValuePair Name="Exename" Value="regsvr32.exe" />
        </ValueEditor.Metadata>
      </ValueEditor>
      <ValueEditor EditorType="DefaultStringPropertyEditor" DisplayName="&lt;Изменить...&gt;" />
      <ValueEditor EditorType="DefaultFilePropertyEditor" DisplayName="&lt;Обзор...&gt;" />
    </StringProperty.ValueEditors>
  </StringProperty>
  <StringProperty Name="LocalDebuggerCommandArguments" DisplayName="Аргументы команды" Description="Аргументы для командной строки, которые будут переданы приложению." F1Keyword="VC.Project.IVCLocalDebugPageObject.CommandArguments">
    <Argument Property="LocalDebuggerCommand" />
  </StringProperty>
  <StringProperty Name="LocalDebuggerWorkingDirectory" DisplayName="Рабочий каталог" Description="Рабочий каталог приложения. По умолчанию это каталог, содержащий файл проекта." Subtype="folder" F1Keyword="VC.Project.IVCLocalDebugPageObject.WorkingDirectory" />
  <BoolProperty Name="LocalDebuggerAttach" DisplayName="Присоединиться" Description="Определяет, будет ли отладчик пытаться присоединиться к существующему процессу при начале отладки." F1Keyword="VC.Project.IVCLocalDebugPageObject.Attach" />
  <EnumProperty Name="LocalDebuggerDebuggerType" DisplayName="Тип отладчика" Description="Определение тип используемого отладчика. При выборе значения &quot;Авто&quot; тип отладчика будет выбран в зависимости от содержимого exe-файла." F1Keyword="VC.Project.IVCLocalDebugPageObject.DebuggerType">
    <EnumProperty.Metadata>
      <NameValuePair Name="IsDebugType" Value="true" />
    </EnumProperty.Metadata>
    <EnumValue Name="NativeOnly" DisplayName="Только машинный код" />
    <EnumValue Name="ManagedOnly" DisplayName="Только управляемый код (.NET Framework)" />
    <EnumValue Name="Mixed" DisplayName="Смешанный код (.NET Framework)" />
    <EnumValue Name="ManagedCore" DisplayName="Только управляемый код (.NET Core)" />
    <EnumValue Name="NativeWithManagedCore" DisplayName="Смешанный код (.NET Core)" />
    <EnumValue Name="Auto" DisplayName="Авто" />
    <EnumValue Name="Script" DisplayName="Скрипт" />
    <EnumValue Name="GPUOnly" DisplayName="Только GPU (C++ AMP)" />
    <EnumValue Name="JavaScriptForWebView2" DisplayName="JavaScript (WebView2)" />
  </EnumProperty>
  <StringListProperty Name="LocalDebuggerEnvironment" DisplayName="Окружение" Description="Задает окружение для отладчика. Также можно указать переменные, которые будут объединены с существующим окружением." Separator="&#xA;" F1Keyword="VC.Project.IVCLocalDebugPageObject.Environment" />
  <DynamicEnumProperty Name="LocalGPUDebuggerTargetType" DisplayName="Тип акселератора отладки" Category="GPUOptions" EnumProvider="GPUTargets" F1Keyword="VC.Project.IVCLocalDebugPageObject.GPUDebuggerTargetType" Description="Тип акселератора отладки для отладки кода GPU.  (Доступно, только когда  отладчик GPU активен.)">
    <DynamicEnumProperty.Metadata>
      <NameValuePair Name="ParentPropertyName" Value="LocalDebuggerDebuggerType" />
      <NameValuePair Name="ParentPropertyValue" Value="GPUOnly" />
    </DynamicEnumProperty.Metadata>
  </DynamicEnumProperty>
  <EnumProperty Name="GPURefDebuggerBreakOnAllThreads" DisplayName="Стандартное поведение точек останова для GPU" Category="GPUOptions" Description="Задает частоту остановок отладчика GPU." F1Keyword="VC.Project.IVCLocalDebugPageObject.GPUBreakOnAllThreads">
    <EnumValue Name="GPURefBreakOncePerWarp" DisplayName="Остановка один раз для порции" Description="Остановка один раз для порции" />
    <EnumValue Name="GPURefBreakForCPUThread" DisplayName="Остановка для каждого потока (как ЦП)" Description="Остановка для каждого потока (как ЦП)" />
    <EnumProperty.Metadata>
      <NameValuePair Name="ParentPropertyName" Value="LocalDebuggerDebuggerType" />
      <NameValuePair Name="ParentPropertyValue" Value="GPUOnly" />
    </EnumProperty.Metadata>
  </EnumProperty>
  <BoolProperty Name="LocalDebuggerMergeEnvironment" DisplayName="Объединение окружения" Description="Объединять указанные переменные окружения с существующим окружением." F1Keyword="VC.Project.IVCLocalDebugPageObject.EnvironmentMerge" />
  <BoolProperty Name="LocalDebuggerSQLDebugging" DisplayName="Отладка SQL" Description="Присоединение SQL-отладчика." F1Keyword="VC.Project.IVCLocalDebugPageObject.SQLDebugging" />
  <DynamicEnumProperty Name="LocalDebuggerAmpDefaultAccelerator" DisplayName="Ускоритель по умолчанию для AMP" EnumProvider="AmpAccelerators" F1Keyword="VC.Project.IVCLocalDebugPageObject.AmpDefaultAccelerator" Description="Переопределить выбор ускорителя по умолчанию для C++ AMP. Свойство не применимо при отладке управляемого кода.">
  </DynamicEnumProperty>
  <BoolProperty Name="UseLegacyManagedDebugger" Visible="false" />
</Rule>