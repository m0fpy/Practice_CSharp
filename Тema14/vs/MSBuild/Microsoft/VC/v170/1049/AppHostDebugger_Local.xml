<Rule Name="AppHostLocalDebugger" DisplayName="Локальный компьютер" PageTemplate="debugger" Order="100" Description="Параметры локального отладчика" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns="http://schemas.microsoft.com/build/2009/properties">

  <Rule.Metadata>
    <sys:Guid x:Key="DebugTargetTypeCommandGuid">FEEA6E9D-77D8-423F-9EDE-3970CBB76125</sys:Guid>
    <sys:UInt32 x:Key="DebugTargetTypeCommandId">0x200</sys:UInt32>
  </Rule.Metadata>
  <Rule.DataSource>
    <DataSource Persistence="UserFile"/>
  </Rule.DataSource>
  <Rule.Categories>
    <Category Name="StartOptions" DisplayName="Параметры запуска" Description="Параметры запуска"/>
    <Category Name="GPUOptions" DisplayName="Параметры графического процессора" Description="Параметры графического процессора"/>
  </Rule.Categories>
  <BoolProperty Name="DebuggerLaunchApplication" DisplayName="Запустить приложение" Category="StartOptions" F1Keyword="VC.Project.IVCAppHostLocalDebugPageObject.LaunchApplication" Description="Указывает, должно ли приложение запускаться немедленного или после ожидания отладки."/>
  <BoolProperty Name="AllowLocalNetworkLoopback" DisplayName="Разрешить петлевой адрес в локальной сети" Category="StartOptions" F1Keyword="VC.Project.IVCAppHostLocalDebugPageObject.AllowLocalNetworkLoopback" Description="При отладке приложений для Магазина Windows разрешает использовать локальные службы, отлаживать сетевой трафик и использовать локальные петлевые адреса для связи с компонентами на том же компьютере."/>
  <EnumProperty Name="DebuggerType" DisplayName="Тип отладчика" Category="StartOptions" F1Keyword="VC.Project.IVCAppHostLocalDebugPageObject.DebuggerType" Description="Указывает тип кода для отладки.">
    <EnumProperty.Metadata>
      <NameValuePair Name="IsDebugType" Value="true"/>
    </EnumProperty.Metadata>
    <EnumValue Name="NativeOnly" DisplayName="Только машинный код"/>
    <EnumValue Name="ManagedCore" DisplayName="Только управляемый код"/>
    <EnumValue Name="GPUOnly" DisplayName="Только GPU (C++ AMP)"/>
    <EnumValue Name="Script" DisplayName="Только скрипт"/>
    <EnumValue Name="NativeWithManagedCore" DisplayName="Управляемый и машинный"/>
    <EnumValue Name="NativeWithScript" DisplayName="Скрипт и машинный код"/>
  </EnumProperty>
  <DynamicEnumProperty Name="GPUDebuggerTargetType" DisplayName="Тип акселератора отладки" Category="GPUOptions" EnumProvider="GPUTargets" F1Keyword="VC.Project.IVCAppHostLocalDebugPageObject.GPUDebuggerTargetType" Description="Тип акселератора отладки для отладки кода GPU.  (Доступно, только когда  отладчик GPU активен.)">
    <DynamicEnumProperty.Metadata>
      <NameValuePair Name="ParentPropertyName" Value="DebuggerType"/>
      <NameValuePair Name="ParentPropertyValue" Value="GPUOnly"/>
    </DynamicEnumProperty.Metadata>
  </DynamicEnumProperty>
  <EnumProperty Name="GPURefDebuggerBreakOnAllThreads" DisplayName="Стандартное поведение точек останова для GPU" Category="GPUOptions" Description="Задает частоту остановок отладчика GPU." F1Keyword="VC.Project.IVCAppHostLocalDebugPageObject.BreakpointBehavior">
    <EnumValue Name="GPURefBreakOncePerWarp" DisplayName="Остановка один раз для порции" Description="Остановка один раз для порции"/>
    <EnumValue Name="GPURefBreakForCPUThread" DisplayName="Остановка для каждого потока (как ЦП)" Description="Остановка для каждого потока (как ЦП)"/>
    <EnumProperty.Metadata>
      <NameValuePair Name="ParentPropertyName" Value="DebuggerType"/>
      <NameValuePair Name="ParentPropertyValue" Value="GPUOnly"/>
    </EnumProperty.Metadata>
  </EnumProperty>
  <DynamicEnumProperty Name="DebuggerAmpDefaultAccelerator" DisplayName="Ускоритель по умолчанию для AMP" EnumProvider="AmpAccelerators" F1Keyword="VC.Project.IVCAppHostLocalDebugPageObject.AmpDefaultAccelerator" Description="Переопределить выбор ускорителя по умолчанию для C++ AMP. Свойство не применимо при отладке управляемого кода.">
  </DynamicEnumProperty>
  <StringProperty Name="LayoutDir" DisplayName="Путь макета пакета" Description="Расположение макета пакета, в которое будут копироваться двоичные выходные данные. Это расположение может также содержать недвоичные ресурсы проекта."/>
  <StringProperty Name="CommandLineArgs" DisplayName="Аргументы командной строки" Description="Аргументы командной строки, передаваемые в отладчик."/>
</Rule>
